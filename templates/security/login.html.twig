{% extends 'base.html.twig' %}

{% set pageType='left-sidebar' %}

{% block title %}
    Reset your password
{% endblock %}

{% block banner %}
{% endblock %}

{% block feature2 %}
{% endblock %}

{% block recentPosts %}
{% endblock %}

{% block feature1 %}

    <!-- Content -->
    <article>
        <header class="major">
            <h2>Login</h2>
            <p>Sign in here</p>
        </header>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <h3>
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </h3>
            {% endif %}

            <input type="email"
                   value="{{ last_username }}"
                   name="email"
                   id="inputEmail"
                   class="form-control"
                   autocomplete="email"
                   required
                   placeholder="Email Address"
                   autofocus />

            <input type="password"
                   name="password"
                   id="inputPassword"
                   class="form-control"
                   autocomplete="current-password"
                   placeholder="Password"
                   required />

            <input type="hidden"
                   name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}" />

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <input type="submit" value="Login" class="primary" />
            <a href="{{ path('selene_cms_forgot_password_request') }}">Forgot Password</a>
        </form>
{% endblock %}
